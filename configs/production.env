# Production Environment Configuration
# Set these as environment variables in your production deployment
# Be sure to remove any comments (lines starting with `#`)

# Server configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Spotify API configuration (REQUIRED - get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_production_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_production_spotify_client_secret
SPOTIFY_REDIRECT_URL=https://yourdomain.com/callback

# Security configuration (strict for production)
SECURITY_RATE_LIMIT_REQUESTS_PER_SECOND=10
SECURITY_RATE_LIMIT_BURST=20

# Logging configuration (optimized for production)
LOGGING_LEVEL=info
LOGGING_FORMAT=json
LOGGING_OUTPUT=stdout
LOGGING_ENABLE_HTTP=true