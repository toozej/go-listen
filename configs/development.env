# Development Environment Configuration
# Copy this file to .env and customize for your development setup
# Be sure to remove any comments (lines starting with `#`)

# Server configuration
SERVER_HOST=localhost
SERVER_PORT=8080

# Spotify API configuration (REQUIRED - get from https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URL=http://127.0.0.1:8080/callback

# Security configuration (relaxed for development)
SECURITY_RATE_LIMIT_REQUESTS_PER_SECOND=50
SECURITY_RATE_LIMIT_BURST=100

# Logging configuration (verbose for development)
LOGGING_LEVEL=debug
LOGGING_FORMAT=text
LOGGING_OUTPUT=stdout
LOGGING_ENABLE_HTTP=true